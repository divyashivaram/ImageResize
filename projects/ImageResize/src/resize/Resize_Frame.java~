private void jButton2MouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jButton2MouseClicked
    scale_factor=Integer.parseInt( jTextField1.getText());
    try {
            dsource=ImageIO.read(new File(new_file1));
        } catch (IOException ex) {
            Logger.getLogger(Resize_Frame.class.getName()).log(Level.SEVERE, null, ex);
        }
        int source_width=dsource.getWidth();
        int source_height=dsource.getHeight();
        double dest_height=source_height*scale_factor/100;
        double dest_width=source_width*scale_factor/100;
        //JOptionPane.showMessageDialog(null,dest_width);
        width=(int)dest_width;
        height=(int) dest_height;
        ddest=new BufferedImage(width, height, BufferedImage.TYPE_INT_RGB);
        Graphics2D g = (Graphics2D)ddest.createGraphics();
        //AffineTransform at =new AffineTransform();
        //AffineTransform scaleInstance;
        //scaleInstance = at.getScaleInstance(width,height);
        g.drawImage(dsource, 0, 0, width, height, this);
        //g.addRenderingHints(new RenderingHints(RenderingHints.KEY_RENDERING,
        //RenderingHints.VALUE_RENDER_QUALITY));
        //g.drawImage(ddest, at, this);
        //g.dispose();
        try 
        {
            ImageIO.write(ddest,"JPG",new File("/home/divya/resizeImage1.jpg"));
            ImageIcon icon = new ImageIcon("/home/divya/resizeImage1.jpg");
        } catch (IOException ex) {
            Logger.getLogger(Resize_Frame.class.getName()).log(Level.SEVERE, null, ex);
        }
}//GEN-LAST:event_jButton2MouseClicked

